{
  "global": {
    "port": 8080,
    "log_file": "multi-mcp-production.log",
    
    "_comment_connection_pool": "Connection pool settings for handling high concurrency",
    "maxConnectionsPerServer": 50,
    "maxConcurrentRequestsPerUser": 10,
    "maxTotalConnections": 500,
    "connectionTimeout": 30000,
    "requestTimeout": 60000,
    "idleTimeout": 300000,
    "queueMaxSize": 1000,
    "cleanupInterval": 60000,
    
    "_comment_rate_limiting": "Rate limiting configuration for production load",
    "rateLimitTokens": 100,
    "rateLimitWindow": 60000,
    "maxBurst": 150,
    "perUserLimit": 10,
    "perServerLimit": 50,
    "enableAdaptiveRateLimit": true,
    "adaptiveThreshold": 0.8,
    
    "_comment_monitoring": "Health monitoring and alerting settings",
    "healthCheckInterval": 30000,
    "metricsInterval": 10000,
    "enableAlerting": true,
    "cpuThreshold": 80,
    "memoryThreshold": 85,
    "responseTimeThreshold": 5000,
    "errorRateThreshold": 0.1,
    
    "_comment_security": "Security and performance settings",
    "maxRequestSize": "10mb",
    "allowedOrigins": "*",
    "serverTimeout": 120000,
    "keepAliveTimeout": 65000,
    "headersTimeout": 66000,
    
    "_comment_production": "Production-specific optimizations",
    "enableAPIKeyCache": true,
    "apiKeyCacheTTL": 300000,
    "enableRequestLogging": true,
    "enableMetricsCollection": true,
    "enablePerformanceTracking": true
  },
  "servers": {
    "meerkats": {
      "enabled": true,
      "name": "Meerkats MCP Server",
      "version": "2.0.0",
      "description": "Production-optimized Meerkats server with web scraping, email verification, and Google services",
      "directory": "./servers/meerkats",
      "entryFile": "adapter.js",
      "apiKeyParam": "MEERKATS_API_KEY",
      "_comment": "Production configuration for Meerkats server",
      "healthCheck": {
        "enabled": true,
        "interval": 60000,
        "timeout": 10000,
        "retries": 3
      },
      "rateLimit": {
        "enabled": true,
        "requestsPerMinute": 50,
        "burstSize": 100
      },
      "caching": {
        "enabled": true,
        "ttl": 300000,
        "maxSize": 1000
      }
    },
    "smartlead": {
      "enabled": true,
      "name": "Smartlead MCP Server",
      "version": "1.0.0",
      "description": "Smartlead API integration server",
      "directory": "./servers/smartlead",
      "entryFile": "index.js",
      "apiKeyParam": "SMARTLEAD_API_KEY",
      "healthCheck": {
        "enabled": true,
        "interval": 60000,
        "timeout": 10000,
        "retries": 3
      },
      "rateLimit": {
        "enabled": true,
        "requestsPerMinute": 30,
        "burstSize": 60
      }
    },
    "tavily": {
      "enabled": true,
      "name": "Tavily Search MCP Server",
      "version": "1.0.0",
      "description": "Tavily search API integration",
      "directory": "./servers/tavily",
      "entryFile": "index.js",
      "apiKeyParam": "TAVILY_API_KEY",
      "healthCheck": {
        "enabled": true,
        "interval": 60000,
        "timeout": 10000,
        "retries": 3
      },
      "rateLimit": {
        "enabled": true,
        "requestsPerMinute": 40,
        "burstSize": 80
      }
    },
    "firecrawl": {
      "enabled": true,
      "name": "Firecrawl MCP Server",
      "version": "1.0.0",
      "description": "Firecrawl web scraping integration",
      "directory": "./servers/firecrawl",
      "entryFile": "index.js",
      "apiKeyParam": "FIRECRAWL_API_KEY",
      "healthCheck": {
        "enabled": true,
        "interval": 60000,
        "timeout": 15000,
        "retries": 2
      },
      "rateLimit": {
        "enabled": true,
        "requestsPerMinute": 20,
        "burstSize": 40
      }
    },
    "hatch": {
      "enabled": true,
      "name": "Hatch MCP Server",
      "version": "1.0.0",
      "description": "Hatch integration server",
      "directory": "./servers/hatch",
      "entryFile": "index.js",
      "apiKeyParam": "HATCH_API_KEY",
      "healthCheck": {
        "enabled": true,
        "interval": 90000,
        "timeout": 20000,
        "retries": 2
      },
      "rateLimit": {
        "enabled": true,
        "requestsPerMinute": 15,
        "burstSize": 30
      }
    },
    "meerkats-table": {
      "enabled": true,
      "name": "Meerkats Table Processing Server",
      "version": "2.0.0",
      "description": "High-performance table processing for bulk operations",
      "directory": "./servers/meerkats",
      "entryFile": "adapter.js",
      "apiKeyParam": "MEERKATS_API_KEY",
      "_comment": "Optimized for handling 10k+ concurrent table operations",
      "healthCheck": {
        "enabled": true,
        "interval": 30000,
        "timeout": 5000,
        "retries": 5
      },
      "rateLimit": {
        "enabled": true,
        "requestsPerMinute": 500,
        "burstSize": 1000,
        "enableDynamicScaling": true
      },
      "caching": {
        "enabled": true,
        "ttl": 600000,
        "maxSize": 5000
      },
      "connectionPool": {
        "maxConnections": 100,
        "idleTimeout": 180000,
        "requestTimeout": 30000
      }
    }
  }
}